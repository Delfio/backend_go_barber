{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "ts": "never"
        }
      ],
      "@typescript-eslint/camelcase": "off",
      "eslint/camelcase": "off",
      "@typescript-eslint/interface-name-prefix": ["error", {"prefixWithI": "always"}]
    },
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    }
}
